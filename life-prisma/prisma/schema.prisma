
datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

type OrdersProducts {
  id          String @map("_id") @db.ObjectId
  categoryId  String @db.ObjectId
  description String
  name        String
  price       Int
  stock       Int
  urlImage    String
  urlMoreInfo String
}

type UsersOrders {
  id        String   @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  /// Could not determine type: the field only had null or empty values in the sample set.
  products  Json?
  updatedAt DateTime @db.Date
}

model categories {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  urlImage String
}

model orders {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  amount    Int
  createdAt DateTime         @db.Date
  owner     String           @db.ObjectId
  products  OrdersProducts[]
  updatedAt DateTime         @db.Date

  @@unique([products.name], map: "products.name_1")
}

model products {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  accessories String?
  categoryId  String  @db.ObjectId
  description String
  name        String  @unique(map: "name_1")
  price       Int
  stock       Int
  urlImage    String
  urlMoreInfo String
}

model users {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  VATIN     String
  access    Boolean
  address   String
  createdAt DateTime      @db.Date
  email     String        @unique(map: "email_1")
  /// Field referred in an index, but found no data to define the type.
  lastName  String
  name      String
  orders    UsersOrders[]
  password  String
  phone     Int           @unique(map: "phone_1")
  role      String
  updatedAt DateTime      @db.Date
}
